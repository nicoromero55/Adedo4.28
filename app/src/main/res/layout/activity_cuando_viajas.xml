<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.adedo.Cuando_viajas" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:gravity="top"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selecciona el día en el que viajás"
                android:id="@+id/tv_cuando_viajas"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/Orange"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="80sp"
                android:layout_height="40sp"
                android:id="@+id/ib_siguiente_cuando_viajas"
                android:background="@drawable/arrow"
                android:onClick="siguiente"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="100sp"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cuando_viajas"
                android:layout_centerHorizontal="true"
                android:tag="Día" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="100sp"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/spinner2"
                android:layout_below="@+id/spinner2" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/spinner1"
                android:layout_below="@+id/spinner1"
                android:layout_marginTop="18dp" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignTop="@+id/ib_siguiente_cuando_viajas"
                android:layout_centerHorizontal="true"
                android:background="@drawable/home"
                android:onClick="atras" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
