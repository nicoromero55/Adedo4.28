<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.adedo.Calificacion">

    <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent" >
         
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:gravity="top"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Cómo te fue en el viaje?"
                android:id="@+id/tv_calificacion_como"
                android:layout_marginTop="5sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:id="@+id/tv_calificacion_l1"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/tv_calificacion_como"
                android:layout_margin="5sp"
                android:background="#000"
                android:gravity="center" >

                <RatingBar
                    android:id="@+id/rb_viaje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsabilidad"
                android:layout_marginTop="10sp"
                android:id="@+id/tv_calificacion_responsabilidad"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/tv_calificacion_l1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:id="@+id/tv_calificacion_l2"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/tv_calificacion_responsabilidad"
                android:layout_margin="5sp"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal" >

                <RatingBar
                    android:id="@+id/rb_resp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horarios"
                android:id="@+id/tv_calificacion_horarios"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="23sp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/tv_calificacion_l2"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/tv_calificacion_l3"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@+id/tv_calificacion_horarios"
                android:layout_margin="5sp"
                android:background="#000"
                android:gravity="center"
                android:orientation="horizontal" >

                <RatingBar
                    android:id="@+id/rb_horarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_verComentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_calificacion_l3"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#000"
                android:onClick="verComentarios"
                android:text="Ver Comentarios"
                android:textColor="#FFD700" />
            
            <EditText
                android:id="@+id/et_calificacion_comentarios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/btn_verComentarios"
                android:ems="10"
                android:gravity="left"
                android:layout_marginTop="15dp"
                android:hint="Deje aquí su comentario" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_calificacion_comentarios"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:background="#000"
                android:onClick="aceptar"
                android:text="A  C  E  P  T  A  R"
                android:textColor="#FFD700" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="10sp"
                android:id="@+id/tv"
                android:layout_below="@+id/button"
/>

        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>
