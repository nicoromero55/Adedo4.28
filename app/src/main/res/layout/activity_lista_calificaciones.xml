<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.adedo.Lista_calificaciones">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:gravity="top">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Conductores"
                android:id="@+id/textView3"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/Orange"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lv_calificaciones"
                android:divider="@android:color/transparent"
                android:dividerHeight="5sp"
                android:layout_margin="10sp"
                android:layout_below="@+id/textView4"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/lv_calificaciones"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView3"
                android:gravity="left"
                android:text="Si queres darle una calificación a los siguientes conductores, seleccionálo y deja tu comentario."
                android:textColor="#000"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
