<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.adedo.Lista_viajes">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        android:background="#fff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:layout_margin="10sp"
            android:gravity="top"
           >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elegí tu conductor"
                android:id="@+id/textView3"
                android:layout_marginTop="10sp"
                android:textStyle="bold"
                android:textColor="@color/Orange"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
            
            <TextView
                android:textColor="@color/Orange"
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView5"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/textView3"
                android:text="Conductores disponibles para: "
                android:textSize="15sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/lv_viajes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imageButton1"
                android:layout_margin="7sp"
                android:divider="@android:color/transparent"
                android:dividerHeight="5sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView4"
                android:text="Seleccioná tu conductor de la siguiente lista para enviarle un e-mail y coordinar tu viaje:"
                android:textColor="#000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_alignTop="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="41dp"
                android:background="@drawable/home"
                android:onClick="atras" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
