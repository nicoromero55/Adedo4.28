<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280sp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:background="@color/Orange"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="10sp"
        android:id="@+id/linear" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView_viajes"
            android:layout_width="0sp"
            android:layout_height="190sp"
            android:layout_weight="0.80"
            android:src="@drawable/car" />

        <RelativeLayout
            android:paddingLeft="7dp"
            android:layout_width="0sp"
            android:layout_height="190sp"
            android:layout_weight="3.20"
            android:gravity="top">

           
            <TextView
                android:id="@+id/tv_hora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_fecha"
                android:gravity="left"
                android:text="Hora de salida: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_partida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_hora"
                android:gravity="left"
                android:text="Ciudad de partida: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_lugares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tv_llegada"
                android:gravity="left"
                android:text="Asientos disponibles: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_llegada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_partida"
                android:gravity="left"
                android:text="Ciudad de llegada: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_nombre"
                android:gravity="left"
                android:text="Fecha: "
                android:textColor="#fff" />

            <TextView
                android:id="@+id/tv_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:text="Nombre del chofer"
                android:layout_marginTop="8sp"
                android:textColor="#FFD700"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
        

    </LinearLayout>

</LinearLayout>